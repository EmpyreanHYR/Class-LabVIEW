  File "LVBarcode\dir.mnu"
  File "LVBarcode\Error code define.txt"
  SetOutPath "$INSTDIR\vi.lib\AddOns\LVBarcode\Express VI"
  File "LVBarcode\Express VI\dir.mnu"
  File "LVBarcode\Express VI\LVBarcode ExpressSource.llb"
